<!doctype html>
<html lang="en">
  <head>
    <title>SocketIO</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
 
  </head>
  <body>
      <div class="login">
          <div class="container mt-3">
            <div class="row">
                <div class="col-sm-6  offset-md-3">
                   <div class="loginform">
                         <div class="card">
                       <form action="/login" method="POST">
                          <div class="card-body"> 

                            <h3>Login</h3>
                           
                            <div class="form-group">
                              <label for="">Username</label>
                              <input type="text" name="user" id="userL" class="form-control" placeholder="" aria-describedby="helpId">
                              <small id="helpId" class="text-muted">Help text</small>
                            </div>
                            <div class="form-group">
                              <label for="">Password</label>
                              <input type="password" name="pass" id="pass" class="form-control" placeholder="" aria-describedby="helpId">
                              <small id="helpId" class="text-muted">Help text</small>
                            </div>
                            <div class="btn-group justify-content-center">
                              
                              <input type="text" class="btn btn-info" value="Login" id="loginData">
                              <input  id="register" class="form-control btn btn-danger" value="Register" >
                            </div>
                              
                           
                        </div>
                       </form>
                       
                    </div>
                   </div>
                   <div class="registerform">
                         <div class="card">
                       <form action="/register" method="POST">
                         <div class="card-body"> 
                            <h3>Register</h3>
                            <div class="form-group">
                              <label for="">Username</label>
                              <input type="text" name="user" id="userR" class="form-control" placeholder="" aria-describedby="helpId">
                              <small id="helpId" class="text-muted">Help text</small>
                            </div>
                            <div class="form-group">
                              <label for="">Password</label>
                              <input type="password" name="pass" id="pass" class="form-control" placeholder="" aria-describedby="helpId">
                              <small id="helpId" class="text-muted">Help text</small>
                            </div>
                            <div class="btn-group justify-content-center">
                              
                                    <input type="text" class="btn btn-info" value="Register" id="registerData">
                                     <input type="text" name="" id="login" class="form-control btn btn-primary" value="Login">
                            </div>
                            
                        </div>
                       </form>
                        
                    </div>
                   </div>
                  
                </div>
            </div>
          </div>
      </div>
      <div class="form-mess">
            <div class="container mt-3">
             <h1 id="currentUser">Hello</h1>
            <div class="btn-group">
             
              <button type="button" id="logout" class="btn btn-success">Log out</button>
            </div>
                    <div class="row">
                         
                        <div class="col-sm-9">
                             <h3>Send message</h3>
                         <div class="card" style="height: 300px">
                              <div class="form-control" id="message" style="width:100%;height:300px">

                              </div>
                              <div class="btn-group">
                               <input type="text" name="" id="messText" class="form-control" placeholder="" aria-describedby="helpId">
                              <input type="button" name="" id="send-mess" value="Send" class=" btn btn-info" placeholder="" aria-describedby="helpId">
                            </div>
                         </div>
                        </div>
                        <div class="col-sm-3">
                            <h3>User active</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center" id="currentUserOnline">
                                    <tr>
                                        <td scope="row"></td>
                                       
                                    </tr>
                                   
                                </tbody>
                            </table>
                        </div> 
                    </div>
                </div>
      </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/socket.io.js"> </script>
    <script src="/socket.io.emit..js"></script>
    <script src="/socket.io.on.js"></script>
    
</body>
</html>